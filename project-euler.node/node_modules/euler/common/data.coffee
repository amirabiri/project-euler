path = require 'path'
fs   = require 'fs'

currentSolution = null

exports.setCurrentSolution = (solution) ->
  currentSolution = solution

exports.getFilename = ->
  path.normalize __dirname + '/../solutions/' + currentSolution + '.txt'

exports.readFileLines = (filename)->
  fs.readFileSync(filename).toString().split(/\r?\n/)

exports.readFileStrNoNewlines = (filename)->
  fs.readFileSync(filename).toString().replace(/\r?\n/g, '')
