data = require 'euler/common/data'

digits = []

exports.initialize = ->
  number = data.readFileStrNoNewlines data.getFilename()
  for i in [0..number.length]
    digits.push number.charCodeAt(i) - 48

exports.solve = ->
  max = 0
  for i in [0..digits.length - 13]
    p = 1
    for j in [0..12]
      p *= digits[i + j]

    max = p if p > max

  return max
