data = require 'euler/common/data'

names = null

exports.initialize = ->
  names = data.readFileLines data.getFilename()
  names.sort()

exports.solve = ->
  totalSum = 0
  pos = 1

  for name in names
    charSum = 0
    for i in [0..name.length - 1]
      charSum += name.charCodeAt(i) - 64

    totalSum += charSum * pos++

  return totalSum

